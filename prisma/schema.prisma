generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "sqlite"
}

// Enums
enum Role {
  USER
  ADMIN
}

enum SubscriptionTier {
  FREE
  PREMIUM
}

enum Language {
  PL
  EN
}

// NextAuth Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  tier          SubscriptionTier @default(FREE)
  language      Language  @default(PL)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  portfolio     Portfolio?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Portfolio Models

enum TransactionType {
  BUY
  SELL
}

enum NameSource {
  ESMA_FIRDS
  FCA_FIRDS
  SIX
  FALLBACK
}

enum ListingStatus {
  ACTIVE
  TERMINATED
  CANCELLED
  SUSPENDED
}

model Exchange {
  id       String @id @default(cuid())
  mic      String @unique           // ISO 10383: XETR, XLON, XAMS
  name     String                   // Frankfurt (Xetra), London Stock Exchange
  country  String                   // ISO 3166: DE, GB, NL
  currency String                   // ISO 4217: EUR, GBP, USD
  timezone String?                  // IANA: Europe/Berlin, Europe/London

  etfs     Etf[]

  @@index([country])
}

// Instrument = ETF on ISIN level (one name per ISIN)
model Instrument {
  isin            String     @id              // IE00BK5BQT80 or TEMP-VWCE-XETR
  name            String                      // Canonical ETF name
  nameSource      NameSource                  // Source hierarchy: FIRDS > SIX > FALLBACK
  classification  String?                     // CFI code or similar
  nameConflict    Boolean    @default(false)  // Flag for manual inspection
  isinTemporary   Boolean    @default(false)  // True if ISIN is TEMP-{ticker}-{MIC}
  firstSeenAt     DateTime   @default(now())
  lastSeenAt      DateTime   @updatedAt

  listings        Etf[]                       // One instrument, many listings

  @@index([nameSource])
  @@index([isinTemporary])
}

// Etf = Listing (one instrument can have many listings on different exchanges)
model Etf {
  id              String        @id @default(cuid())
  isin            String                           // IE00BK5BQT80 - links to Instrument
  exchangeId      String
  ticker          String?                          // VWCE, VWRL (can be null)
  tradingCurrency String        @default("USD")    // EUR, USD (currency of this listing)
  status          ListingStatus @default(ACTIVE)   // ACTIVE, TERMINATED, CANCELLED, SUSPENDED
  sourceSystem    String        @default("FALLBACK") // ESMA_FIRDS, FCA_FIRDS, SIX, FALLBACK
  firstSeenAt     DateTime      @default(now())
  lastSeenAt      DateTime      @default(now()) @updatedAt

  // Relations
  instrument      Instrument    @relation(fields: [isin], references: [isin], onDelete: Restrict)
  exchange        Exchange      @relation(fields: [exchangeId], references: [id], onDelete: Restrict)
  transactions    Transaction[]

  @@unique([isin, exchangeId])       // One listing per (ISIN, Exchange)
  @@index([isin])
  @@index([ticker])
  @@index([status])
  @@index([sourceSystem])
}

model Portfolio {
  id        String   @id @default(cuid())
  userId    String   @unique
  name      String   @default("Moje Portfolio")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@index([userId])
}

model Transaction {
  id           String          @id @default(cuid())
  portfolioId  String
  etfId        String
  type         TransactionType
  date         DateTime                 // Data transakcji
  quantity     Float                    // Liczba jednostek
  pricePerUnit Float                    // Cena za jednostkę w walucie transakcji
  totalAmount  Float                    // Całkowita wartość (quantity * price + fees)
  currency     String                   // Waluta transakcji (USD, EUR, PLN)
  fees         Float           @default(0)  // Prowizje
  exchangeRate Float?                   // Kurs NBP (do PLN) - opcjonalny, na przyszłość
  notes        String?                  // Notatki użytkownika
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  portfolio Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  etf       Etf       @relation(fields: [etfId], references: [id], onDelete: Restrict)

  @@index([portfolioId])
  @@index([etfId])
  @@index([date])
  @@index([type])
}
